<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_producer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="MATHEUS LIMA DA SILVA"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_view_producer_picture"
        app:layout_constraintTop_toTopOf="@+id/image_view_producer_picture" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_producer_address"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="EndereÃ§o"
        app:layout_constraintStart_toStartOf="@+id/textView_producer_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_producer_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_producer_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="100 ativos"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_producer_picture"
        app:layout_constraintStart_toStartOf="@+id/textView_producer_address"
        app:layout_constraintTop_toBottomOf="@+id/textView_producer_address" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_producer_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_producers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_producer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>